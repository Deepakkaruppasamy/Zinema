# Zinema Backend Environment Configuration Template
# Copy this to server/.env and fill in your actual values

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/zinema_production

# Authentication
CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Service Configuration
# Option 1: Brevo API (Recommended - more reliable)
BREVO_API_KEY=your_brevo_api_key_here
SENDER_EMAIL=your-email@domain.com
SENDER_NAME=Zinema

# Option 2: SMTP Configuration (Fallback)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_ALT_PORT=2525
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Support Email
SUPPORT_EMAIL=your-support-email@domain.com

# Inngest (Background Jobs)
INNGEST_EVENT_KEY=your_inngest_event_key
INNGEST_SIGNING_KEY=your_inngest_signing_key

# API Keys
TMDB_API_KEY=your_tmdb_api_key
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash

# Server Configuration
PORT=5000
NODE_ENV=development

# Security
JWT_SECRET=your-super-secure-jwt-secret
ENCRYPTION_KEY=your-encryption-key

# Feature Flags
ENABLE_PWA=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
